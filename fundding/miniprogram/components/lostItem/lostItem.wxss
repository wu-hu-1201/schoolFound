.content{
    width: 100%;
}
.content .content-item{
    width: 100%;
    height: 275rpx;
    background-color: #f3f3f3;  
    display: flex;
    margin-bottom: 30rpx;
}
.content .content-item:first-child{
    margin-top: 20rpx;
}

.content .content-item .left {
    width: 325rpx;
}
.content .content-item .left .img {
    width: 325rpx;
    height: 275rpx;
}
.content .content-item .right { 
    width: 425rpx;
    display: flex;
    flex-direction: column;
    padding: 20rpx 0 0 10rpx;
    box-sizing: border-box;
}
.content .content-item .right .title{
    font-size: 30rpx;
    font-weight: 700;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    margin-bottom: 10rpx;
}
.content .content-item .right .intro{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 100%;
    margin-bottom: 10rpx;
}
.content .content-item .right .tag .item{
    font-size: 26rpx;
    background-color:rgba(28, 136, 245, .5);
    border: 1rpx solid rgb(28, 136, 245);
    color: rgb(255, 254, 254); 
    padding: 10rpx;
    height: 20rpx; 
    line-height: 20rpx;
    display: inline-block;
}
.content .content-item .right .right-foot {
    display: flex;
    justify-content: space-between;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 5rpx;
}
.content .content-item .right .right-foot .user{
    text-align: center;
    display: flex;
    align-items: center;
    font-size: 30rpx;
}


.content .content-item .right .right-foot .user .avatar {
    width: 30rpx;
    height: 30rpx;
}
.content .content-item .right .right-foot .date {
    margin-right: 10rpx;
    font-size: 28rpx;
}




