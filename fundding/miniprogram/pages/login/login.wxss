.hide {
    display: none;
}
.login {
    z-index: 1;
}
.title {
    padding-top: 500rpx;
    color: white;
    font-size: 48rpx;
    font-weight: 700;
}
.title text {
    margin-left: 30rpx;
}
.test {
    margin-top: 30rpx;
    font-size: 28rpx;
    color: #999999;
}
.test text {
    margin-left: 30rpx;
}
.login-wrapper {
    display: flex; 
    align-items: center; 
    justify-content: center;
    margin-top: 500rpx;
}
.login-box {
    padding: 20rpx 80rpx;
    background:turquoise;
    border-radius: 20rpx;
}
.login-box text {
    font-size: 28rpx;
    color: white;
}


