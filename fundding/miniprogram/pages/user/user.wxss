.back {
    width: 100%;
    height: 9vh;
    background: #32B4FF;
}
.container{
    width: 750rpx;
    height: 91vh;
    background-image: linear-gradient(#32B4FF, #3262FF);
    padding-top: 50rpx;
    box-sizing: border-box;
}
.cover1{
    width: 450rpx;
    height: 50rpx;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.1);
    margin-bottom: -25rpx;
}
.cover2{
    width: 550rpx;
    height: 25rpx;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.6);
}
.container-content {
    margin: 0 auto;
    width: 650rpx;
    height: 950rpx;
    border: 1rpx solid rgba(0, 0, 0, 0.1);
}
.container-content .content-user {
    height: 30%;
    width: 100%;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;

}

.container-content .content-user .item-ava{
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    margin-top: 50rpx;
}

.container-content .content-user .item-name{
    margin-top: 20rpx;
    font-size: 40rpx;
    color: #fff;
}
.container-content .content-release{
    height:70%;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.container-content .content-release .item-title {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 15rpx;
    margin-bottom: 25rpx;
    font-size: 30rpx;
    font-weight: 700;
    letter-spacing: 3rpx;
    color: #fff;
}
.container-content .content-release .item-release {
    background-color: #fff;
    overflow: scroll;
    flex: 1;
    display: flex;
    flex-direction: column;
   
}
.container-content .content-release .item-release .content {
    width: 100%;
    height: 200rpx;
    margin-bottom: 30rpx;
    display: flex;
    justify-content: space-between;
}
.container-content .content-release .item-release .content .left {
    flex: 0 0 30%;
    border-right: 1rpx solid rgba(0, 0, 0, .5);
    margin: 20rpx 0;
    padding: 0 20rpx;
    font-size: 30rpx;
    height: 200rpx;
    line-height: 200rpx;
}
.container-content .content-release .item-release .content .left .date {
    text-align: center;
    align-items: center;
}
.container-content .content-release .item-release .content .right {
    flex: 1;
    margin: 20rpx;
    height: 200rpx;
    font-size: 30rpx;
    text-align: center;
    display: flex;
    
}
.container-content .content-release .item-release .content .right .intro{
    width: 100%;
    margin: auto;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-items: center;


}













.release {
    width: 250rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background-color: rgb(248,46,253);
    color: #fff;
    border-radius: 35rpx;
    position: fixed;
    left: 50%;
    transform: translate(-50%, -50%)
}