.main{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.quiet {
  /* position: fixed; */
  width: 100%;
  height: 30vh;

}
.header {
  z-index: -1;
}

.back {
  border-radius: 15rpx;
  position: fixed;
  top: 120rpx;
  left: 40rpx;
  background: white;
}
.back-img {
  width: 40rpx;
  height: 40rpx;
  padding: 0rpx 10rpx;
  margin-top: 10rpx;
}
.top {
  position: fixed;
  left: 50%;
  top: 15%;
  height: 100rpx;
  width: 100%;  
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
}
.text {
  width: 100%;
  text-align: center;
}
.top-01 {
  font-size: 50rpx;
  font-weight: 700;
  color: white;
}
.top-02 {
  font-size: 30rpx;
  color: #ededed;
}



.wrapper {
  background: white;
  width: 100%;
  height: 70vh;
  overflow: scroll;
  padding: 0 30rpx;
  box-sizing: border-box;

}
.group {
  height: 200rpx;
  width: 100%;
  margin:  40rpx 0;
  border-bottom: 1px solid #999999;
  display: flex;
  flex-wrap: nowrap;
  padding-top: 20rpx;
}
.group-img {
  width: 200rpx;
  height: 200rpx;
}

.des {
  flex: 1;
  height: 100%;
  margin: 0 20rpx 0 15rpx;
}
.title {
  color: brown;
  width: 400rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;

}

.text {
  height: 60rpx;
  width: 100%;
  margin-top: 30rpx;
  
}
.text-t{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  float: left;
  font-size: 24rpx;
  color: #999999;
}