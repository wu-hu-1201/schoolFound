.container{
    width: 100%;
    margin-top: 550rpx;
}
.container .category{
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    padding: 0 35rpx;
    background-color: #efefef;
    position:fixed;
    top: 470rpx;
    width: 100%;
    z-index: 1;
}
.container .category .selected {
    color: rgb(247, 97, 28);
    font-weight: 700;
    border-bottom: 1px solid rgb(247, 97, 28);
}
.container .category .item {
    /* flex: 0 0 136rpx; */
    padding: 10rpx;
}
.container .category .item:last-child {
    text-align: right;
}

.lost-item {
    margin-top: 30rpx;
}




.release {
    position: fixed;
    right: 50rpx;
    bottom: 50rpx;
    border-radius: 30rpx;
}