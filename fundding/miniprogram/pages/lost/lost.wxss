.main {
    position: relative;
}
.top {
    /* background-image: linear-gradient(#22dd92, #fff); */
    background-color: rgb(50, 180, 255);
    height: 350rpx;
    padding-top: 180rpx;
    position:fixed;
    top: 0rpx;
    width: 100%;
    z-index: 1;
}
.top .top-header {
    display: flex;
    margin:  0 50rpx;
    justify-content: space-between;
    align-items: center;
}
.top .top-header .title {
    font-size: 25px;
}
.top .top-header .map {
    display: flex;
}
.top .top-header .map .arrow{  
    width: 50rpx;
}
.top .top-header .map .addr{
    display: inline-block;
    flex: 1;
    height: 30rpx;
    line-height: 30rpx;
    text-align: right;
}


